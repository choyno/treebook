<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

  <div>  
  <%= f.input :first_name, :autofocus => true %></div>

  <div> 
  <%= f.input :last_name, :autofocus => true %></div>


  <div> 
  <%= f.input :profile_name, :autofocus => true %></div>

  <div> 
  <%= f.input :email, :autofocus => true %></div>

  <div>
  <%= f.input :password %></div>

  <div> 
  <%= f.input :password_confirmation %></div>

  <div><%= f.button :submit, "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
