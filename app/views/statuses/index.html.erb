<h1>Listing Statuses</h1>
<%= link_to 'New Status', new_status_path, class: 'btn btn-primary' %>


<br/> 

  <% @statuses.each do |status| %>
    <div class="page-header"> 
        <div  class="status">
         <div class="row">
           <div class="span1" style="margin-top: 10px;">
              <%= image_tag  status.user.gravatar_url %>
           </div>
           <div class="span7">
            <h4><%= status.user.full_name %></h4>
            <div> <%= status.content%></div>
            <div>
              <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
              <span class="admin">
                <%= link_to 'Edit', edit_status_path(status) %> |
                <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
              </span>
            </div>
          </div>

         </div>
        </div>
    </div>
  <% end %> 

<br />


